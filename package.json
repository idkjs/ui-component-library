{
  "name": "tenzir-ui-component-library",
  "author": "Tenzir",
  "version": "0.2.5",
  "scripts": {
    "build": "bsb -make-world && yarn build-storybook",
    "build-storybook": "build-storybook",
    "clean": "bsb -clean-world",
    "start": "bsb -make-world -w -ws _ ",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "tdd": "jest --watchAll"
  },
  "lint-staged": {
    "*.js": [
      "prettier --print-width 80 --write"
    ],
    "*.{re,rei}": [
      "bsrefmt --in-place"
    ]
  },
  "keywords": [
    "UI-Library",
    "UI-Components",
    "ReasonML",
    "ReasonReact",
    "Reason-React"
  ],
  "license": "BSD-3-Clause",
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "reason-react": ">=0.9.1"
  },
  "dependencies": {
    "bs-css": "^11.0.0",
    "bs-flexboxgrid": "^1.1.1",
    "bs-webapi": "^0.16.0",
    "react-icons": "^3.10.0",
    "react-syntax-highlighter": "^12.2.1",
    "regenerator-runtime": "^0.13.5",
    "storybook-dark-mode": "^0.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@glennsl/bs-jest": "^0.5.1",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/api": "^5.3.19",
    "@storybook/components": "^5.3.19",
    "@storybook/core": "^5.3.19",
    "@storybook/core-events": "^5.3.19",
    "@storybook/react": "^5.3.19",
    "@storybook/theming": "^5.3.19",
    "babel-loader": "^8.1.0",
    "bs-platform": "^8.0.1",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "reason-react": ">=0.9.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "resolutions": {
    "acorn": "^7.1.1",
    "minimist": "^1.2.2"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(@glennsl|bs-platform|bs-css)/)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
