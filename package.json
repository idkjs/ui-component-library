{
  "name": "tenzir-ui-component-library",
  "author": "Tenzir",
  "version": "0.6.0",
  "scripts": {
    "build:reason": "bsb -clean-world && bsb -make-world",
    "build:storybook": "build-storybook",
    "build": "yarn build:reason && yarn build:storybook",
    "clean": "bsb -clean-world",
    "start": "bsb -make-world -w -ws _ ",
    "storybook": "start-storybook -p 6006",
    "deploy-storybook": "yarn build:reason && storybook-to-ghpages",
    "test": "jest",
    "tdd": "jest --watchAll"
  },
  "lint-staged": {
    "*.js": [
      "prettier --print-width 80 --write"
    ],
    "*.{re,rei}": [
      "bsrefmt --in-place"
    ]
  },
  "keywords": [
    "UI-Library",
    "UI-Components",
    "ReasonML",
    "ReasonReact",
    "Reason-React"
  ],
  "license": "BSD-3-Clause",
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "reason-react": ">=0.9.1"
  },
  "dependencies": {
    "@storybook/storybook-deployer": "^2.8.6",
    "bs-css": "^13.0.0",
    "bs-css-emotion": "^2.0.0",
    "bs-flexboxgrid": "^1.1.1",
    "bs-webapi": "^0.16.1",
    "react-icons": "^3.10.0",
    "react-syntax-highlighter": "^12.2.1",
    "regenerator-runtime": "^0.13.5",
    "storybook-dark-mode": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@glennsl/bs-jest": "^0.5.1",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-links": "^6.0.21",
    "@storybook/addons": "^6.0.21",
    "@storybook/api": "^6.0.21",
    "@storybook/components": "^6.0.21",
    "@storybook/core": "^6.0.21",
    "@storybook/core-events": "^6.0.21",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.21",
    "@storybook/theming": "^6.0.21",
    "babel-loader": "^8.1.0",
    "bs-platform": "^7.3.2",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.3",
    "reason-react": ">=0.9.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "resolutions": {
    "acorn": "^7.1.1",
    "kind-of": "^6.0.3",
    "minimist": "^1.2.2",
    "lodash": "^4.17.19",
    "elliptic": "^6.5.3",
    "prismjs": "^1.21.0",
    "serialize-javascript": "^3.1.0"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(@glennsl|bs-platform|bs-css)/)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
